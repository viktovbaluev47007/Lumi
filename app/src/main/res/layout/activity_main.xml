<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Кнопка активации голосового помощника -->
    <Button
        android:id="@+id/btnVoiceActivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Говори Люми"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Пример текста для отображения результата распознавания -->
    <TextView
        android:id="@+id/tvRecognitionResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Здесь будет результат распознавания"
        android:layout_below="@id/btnVoiceActivate"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <!-- Кнопка для перехода к Заметкам -->
    <Button
        android:id="@+id/btnNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заметки"
        android:layout_below="@id/tvRecognitionResult"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"/>

    <!-- Кнопка для перехода к Калькулятору -->
    <Button
        android:id="@+id/btnCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Калькулятор"
        android:layout_alignBaseline="@id/btnNotes"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
